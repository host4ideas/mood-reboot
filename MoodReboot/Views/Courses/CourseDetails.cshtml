@section scriptsMenuLayout {
    <script src="~/js/filePreviewContentCourse.js"></script>
    <script>
        const converter = new showdown.Converter({ extensions: ['xssfilter'] })

        function parseMarkdown() {
            const text = $("#editor").val();
            const html = converter.makeHtml(text);
            $("#markdownPreview").html(html);
        }

        $("#editor").keyup(function (e) {
            parseMarkdown();
        });

        function btnUpdateContentHandler(contentId) {
            // Get the content's content (article tag)
            const id = "#" + contentId;
            let contentHtml = $(id).html().trim();
            $("#editor").html(contentHtml);
            // Show the editor
            $("#editorWindow").toggleClass("hidden");
            // Set contentId hidden input value
            $("#contentId").val(contentId);
            // Update editor's form action
            document.getElementById("editorForm").action = "/Content/UpdateContentAsync"
            // Display nicely the content's HTML in the editor preview
            parseMarkdown();
        }

        function btnNewContentHandler(contentGroupId) {
            // Show the editor
            $("#editor").html("");
            $("#editorWindow").toggleClass("hidden");
            // Sset groupId hidden input value
            $("#grupId").val(contentGroupId);
            // Update editor's form action
            document.getElementById("editorForm").action = "/Content/AddContentAsync"
        }

        $("#close-editor").click(function () {
            $("#editor").html("");
            $("#editorWindow").toggleClass("hidden");
        });
    </script>
}

