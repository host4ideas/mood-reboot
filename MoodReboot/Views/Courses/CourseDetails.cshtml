@{
    Layout = "_MenuLayout";
}

@model CourseDetailsModel

<section id="accordion-collapse" class="mt-10 mb-10" data-accordion="collapse">
    <h2 class="mb-4 text-3xl lg:text-4xl tracking-tight font-extrabold text-gray-900 dark:text-white">Unidades</h2>

    @{
        for (int i = 0; i < Model.ContentGroups.Count; i++)
        {
            ContentGroup group = Model.ContentGroups[i];
            int index = i + 1;

            if (i < 1)
